<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TranslucentActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@android:color/transparent</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TransparentThemeNoActionBar" parent="android:Theme.Holo.Dialog.NoActionBar">

        <item name="android:background">@android:color/transparent</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HoloWithoutActionBar" parent="android:Theme.Holo.Light.NoActionBar">

    </style>

</resources>
