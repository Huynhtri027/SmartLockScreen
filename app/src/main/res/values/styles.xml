<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TranslucentActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">@android:color/transparent</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TransparentThemeNoActionBar" parent="android:Theme.Holo.Dialog.NoActionBar">

        <item name="android:background">@android:color/transparent</item>
        <item name="background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HoloWithoutActionBar" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="card.main_layout_expandinside" parent="card.main_layout">
        <item name="android:background">@drawable/card_background</item>
    </style>
    <style name="card.main_contentExpand_custom">
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">@dimen/card_expand_layout_padding</item>
    </style>
</resources>
