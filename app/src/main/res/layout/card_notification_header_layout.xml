<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_header_inner_frame"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">
    <!--
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
     -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/card">
        <ImageView
            android:id="@+id/image_view_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/card_header_title"
                android:textStyle="bold"
                android:textSize="@dimen/notification_card_header_title_size"
                android:textColor="@color/card_text_color_header"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/card_header_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/action_bar_location_search"
                android:layout_weight="2"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>