<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_background_grey"
    android:id="@+id/add_environment_scroll_view">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/add_environment_card_layout"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:isScrollContainer="true"
            tools:context="com.pvsagar.smartlockscreen.AddEnvironment$PlaceholderFragment">

            <it.gmariotti.cardslib.library.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_environment_basic"
                card:card_layout_resourceID="@layout/card_environment_inner_layout"/>

            <!-- Bluetooth -->
            <it.gmariotti.cardslib.library.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_bluetooth"
                card:card_layout_resourceID="@layout/card_enable_disable_inner_layout"
                android:layout_marginTop="@dimen/card_spacing"/>

            <!-- Wifi -->
            <it.gmariotti.cardslib.library.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_wifi"
                card:card_layout_resourceID="@layout/card_enable_disable_inner_layout"
                android:layout_marginTop="@dimen/card_spacing"/>

            <!-- Location -->
            <it.gmariotti.cardslib.library.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_location"
                card:card_layout_resourceID="@layout/card_enable_disable_inner_layout"
                android:layout_marginTop="@dimen/card_spacing"/>

            <!-- Passphrase -->
            <it.gmariotti.cardslib.library.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_passphrase"
                card:card_layout_resourceID="@layout/card_passphrase_inner_layout"
                android:layout_marginTop="@dimen/card_spacing"/>

        </LinearLayout>
</ScrollView>