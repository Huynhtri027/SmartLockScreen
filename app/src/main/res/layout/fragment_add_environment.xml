<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:isScrollContainer="true"
    tools:context="com.pvsagar.smartlockscreen.AddEnvironment$PlaceholderFragment">

    <EditText
        android:id="@+id/edit_text_environment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text_environment_name"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>
    <!-- Bluetooth -->
    <TextView
        android:id="@+id/text_view_bluetooth"
        android:text="@string/text_view_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/line_Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#2B497B"
        />

    <CheckBox
        android:id="@+id/checkbox_enable_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_enable_bluetooth"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_view_bluetooth_devices_select"
        android:text="@string/text_view_bluetooth_devices_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"/>


    <ListView
        android:id="@+id/list_view_bluetooth_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <!-- Wifi -->

    <TextView
        android:id="@+id/text_view_wifi"
        android:text="@string/text_view_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line_wifi"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#2B497B"
        />

    <CheckBox
        android:id="@+id/checkbox_enable_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_enable_wifi"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/text_view_wifi_connection_select"
        android:text="@string/text_view_wifi_connection_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <ListView
        android:id="@+id/list_view_wifi_connections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>