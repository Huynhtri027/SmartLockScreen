<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|start">

    <ImageView
        android:layout_width="@dimen/user_picture_dimen"
        android:layout_height="@dimen/user_picture_dimen"
        android:layout_alignParentTop="true"
        android:id="@+id/image_view_minimal_lockscreen_options"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/nav_bar_picture_padding"/>

    <com.pvsagar.smartlockscreen.frontend_helpers.WrapContentViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_minimal_lockscreen_options"
        android:layout_toEndOf="@id/image_view_minimal_lockscreen_options"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view_pager_lockscreen_options">
        <android.support.v4.view.PagerTabStrip
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pager_title_background"
            android:textColor="@color/pager_title_text"
            android:paddingTop="@dimen/pager_tab_padding"
            android:paddingBottom="@dimen/pager_tab_padding"/>
    </com.pvsagar.smartlockscreen.frontend_helpers.WrapContentViewPager>

</RelativeLayout>