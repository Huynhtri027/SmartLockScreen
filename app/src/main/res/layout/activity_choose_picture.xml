<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.pvsagar.smartlockscreen.ChoosePicture">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/card_background_grey"
        android:alpha="0"
        android:id="@+id/backgroud_image_view"/>

    <ImageView
        android:layout_width="@dimen/user_picture_dimen"
        android:layout_height="@dimen/user_picture_dimen"
        android:id="@+id/image_view_edit_picture"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/nav_bar_picture_padding"/>

    <LinearLayout
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_view_edit_picture"
        android:layout_toEndOf="@id/image_view_edit_picture"
        android:id="@+id/card_linear_layout"
        android:alpha="0">
        <it.gmariotti.cardslib.library.view.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_pick_color"
            card:card_layout_resourceID="@layout/card_choose_picture_inner_layout"
            android:layout_marginTop="@dimen/card_spacing"/>
        <it.gmariotti.cardslib.library.view.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_pick_built_in"
            card:card_layout_resourceID="@layout/card_choose_picture_inner_layout"
            android:layout_marginTop="@dimen/card_spacing"/>
        <it.gmariotti.cardslib.library.view.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_pick_custom"
            card:card_layout_resourceID="@layout/card_choose_picture_inner_layout"
            android:layout_marginTop="@dimen/card_spacing"/>
    </LinearLayout>
</RelativeLayout>
