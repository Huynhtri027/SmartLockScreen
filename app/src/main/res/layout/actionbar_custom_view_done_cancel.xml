<?xml version="1.0" encoding="utf-8"?>

<!--
    Custom layout for contextual action bar containing done and cancel button.
    For adding it to the activity use customActionBar functionality in the Activity onCreate function
    to replace the actual action bar to this custom one
 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:divider="?android:attr/dividerVertical"
android:showDividers="middle"
android:dividerPadding="12dp">
<include layout="@layout/include_cancel_button" />
<include layout="@layout/include_done_button" />
</LinearLayout>
