<android.support.v4.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout_main_settings"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>
    <LinearLayout
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/linear_layout_nav_drawer"
        android:orientation="vertical">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_user_profiles"
            android:background="@color/user_profiles_background"
            android:animateLayoutChanges="true"/>
        <it.gmariotti.cardslib.library.view.component.CardShadowView
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/card.shadow_outer_layout"
            android:id="@+id/card_header_shadow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/drawer_list_view"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:background="@color/nav_bar_list_background"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
